<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:RestPunk.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:viewmodels="using:RestPunk.ViewModels"
             x:DataType="viewmodels:SavedQueryViewModel"
             x:Class="RestPunk.Controls.QueryTree">
    <Design.DataContext>
		<viewmodels:SavedQueryViewModel />
    </Design.DataContext>
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50" />
			<RowDefinition />
        </Grid.RowDefinitions>
			<DropDownButton Content="New +" HorizontalAlignment="Left" Grid.Row="0">
                <DropDownButton.Flyout>
                    <MenuFlyout>
                        <MenuItem Header="New Folder" Command="{Binding OnAddFolder}" />
                        <MenuItem Header="New Query"  Command="{Binding OnAddQuery}" />
                        <MenuItem Header="New Collection" Command="{Binding }"/>
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
            <DropDownButton Content="Collection" HorizontalAlignment="Right" Grid.Row="0">
                <DropDownButton.Flyout>
                    <MenuFlyout>
                        <MenuItem Header="Save" Command="{Binding OnSaveCollection }" />
                        <MenuItem Header="Load"  Command="{Binding }" />
                        <MenuItem Header="Export" Command="{Binding }" />
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
        <TreeView Grid.Row="1" ItemsSource="{Binding QueryNodes}" 
            x:CompileBindings="False" 
            SelectionChanged="TreeView_SelectionChanged" >
    <TreeView.Styles>
        <Style Selector="TreeViewItem">
          <Setter Property="IsExpanded"
                  Value="{Binding IsExpanded, Mode=TwoWay}" />
        </Style>
      </TreeView.Styles>

  <TreeView.DataTemplates>
    <!-- Folder header (no TreeViewItem here) -->
    <TreeDataTemplate DataType="models:QueryFolder"
                      ItemsSource="{Binding Children}">
          <StackPanel Orientation="Horizontal" Spacing="6">
            <Image Source="{Binding Icon}" MaxHeight="25" />
            <TextBlock Text="{Binding Name}" Padding="0,4,0,0"/>
          </StackPanel>
    </TreeDataTemplate>

    <!-- Files: leaf node -->
    <DataTemplate DataType="models:SavedQuery">
          <StackPanel Orientation="Horizontal" Spacing="6" DoubleTapped="TreeViewItem_DoubleTapped">
            <TextBlock Text="{Binding}"/>
          </StackPanel>
    </DataTemplate>
  </TreeView.DataTemplates>        
    </TreeView>
    </Grid>
  
</UserControl>
