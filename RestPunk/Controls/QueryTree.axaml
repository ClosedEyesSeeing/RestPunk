<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:RestPunk.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:viewmodels="using:RestPunk.ViewModels"
             x:DataType="viewmodels:SavedQueryViewModel"
             x:Class="RestPunk.Controls.QueryTree">
    <Design.DataContext>
		<viewmodels:SavedQueryViewModel />
    </Design.DataContext>
  <TreeView ItemsSource="{Binding QueryNodes}" >
      
      <TreeView.DataTemplates>
    <!-- Folders: hierarchical (can contain folders and files) -->
    <TreeDataTemplate DataType="models:QueryFolder"
                      ItemsSource="{Binding Children}">

      <StackPanel Orientation="Horizontal" Spacing="6">
        <TextBlock Text="{Binding Name}"/>
      </StackPanel>
    </TreeDataTemplate>

    <!-- Files: leaf node -->
    <DataTemplate DataType="models:SavedQuery">
      <StackPanel Orientation="Horizontal" Spacing="6">
        <TextBlock Text="{Binding Name}"/>
      </StackPanel>
    </DataTemplate>
  </TreeView.DataTemplates>        
    </TreeView>
</UserControl>
